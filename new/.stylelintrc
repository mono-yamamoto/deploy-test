{
	"plugins": [
		"stylelint-prettier",
		"stylelint-declaration-block-no-ignored-properties",
		"stylelint-no-unsupported-browser-features"
	],
	"extends": [
		"stylelint-config-recess-order",
		"stylelint-prettier/recommended",
		"stylelint-config-standard"
	],
	"rules": {
		"plugin/no-unsupported-browser-features": [
			true,
			{
				"browsers": [
					"Last 2 chrome versions",
					"Last 2 edge versions",
					"Last 2 firefox versions",
					"Last 2 safari versions",
					"Last 2 ios_saf versions",
					"Last 2 and_chr versions"
				]
			}
		],
		"color-no-invalid-hex": true,
		"function-url-quotes": "never",
		"function-url-no-scheme-relative": true,
		"function-url-scheme-allowed-list": ["/^https/"],
		"selector-class-pattern": [
			"^[a-z][a-z0-9\\-]*[a-z0-9]$|^[a-z]$",
			{
				"message": "class名はケバブケースで記述します"
			}
		],
		"shorthand-property-no-redundant-values": true,
		"declaration-block-no-shorthand-property-overrides": true,
		"declaration-block-no-redundant-longhand-properties": true,
		"declaration-block-no-duplicate-properties": true,
		"no-invalid-double-slash-comments": true,
		"color-named": "never",
		"number-max-precision": 2,
		"value-no-vendor-prefix": true,
		"property-no-vendor-prefix": true,
		"declaration-no-important": true,
		"declaration-block-single-line-max-declarations": 1,
		"selector-attribute-quotes": "always",
		"prettier/prettier": [true, { "singleQuote": false, "tabWidth": 4 }],
		"plugin/declaration-block-no-ignored-properties": true
	},
	"ignoreFiles": [
		"**/node_modules/**",
		"dist/**",
		"htdocs/aa-en/shared/css/config.css",
		"htdocs/shared/unchangeable/css/keyvisual-movie.css",
		"htdocs/shared/unchangeable/css/slick.css",
		"htdocs/shared/unchangeable/css/local-navigation-light.css",
		"htdocs/shared/unchangeable/css/keyvisual-slider.css",
		"htdocs/shared/unchangeable/css/km-slick.css",
		"htdocs/shared/unchangeable/css/excelcms_newsroom.css",
		"htdocs/shared/unchangeable/css/products-slider.css",
		"htdocs/shared/unchangeable/css/local/selector/config.css",
		"htdocs/shared/unchangeable/css/local/us-en/config.css",
		"htdocs/shared/unchangeable/css/local/siteinfo/config.css",
		"htdocs/shared/unchangeable/css/local/lv-lv/config.css",
		"htdocs/shared/unchangeable/css/local/jp-ja/config.css",
		"htdocs/shared/unchangeable/css/local/hk-en/config.css",
		"htdocs/shared/unchangeable/css/local/hk-zh-tw/config.css",
		"htdocs/shared/unchangeable/css/gateway.css",
		"htdocs/shared/unchangeable/css/responsive.css",
		"htdocs/shared/unchangeable/css/css.css",
		"htdocs/shared/unchangeable/css/ir.css",
		"htdocs/shared/unchangeable/css/excelcms.css",
		"htdocs/aa-bb/shared/css/config.css"
	]
}
